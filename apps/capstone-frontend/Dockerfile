# Run the container with `docker run -p 3000:3000 -t capstone-frontend`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system capstone-frontend && \
          adduser --system -G capstone-frontend capstone-frontend

COPY dist/capstone-frontend capstone-frontend
RUN chown -R capstone-frontend:capstone-frontend .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix capstone-frontend --omit=dev -f install

CMD [ "node", "capstone-frontend" ]
