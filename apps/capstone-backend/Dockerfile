FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=80

WORKDIR /app

RUN addgroup --system capstone-backend && \
          adduser --system -G capstone-backend capstone-backend

COPY dist/apps/capstone-backend capstone-backend
RUN chown -R capstone-backend:capstone-backend .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix capstone-backend --omit=dev -f install

CMD [ "node", "capstone-backend" ]
